<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/listingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listingImage"
        android:text="Title"
        android:textColor="#000000"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/listingSeller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listingImage"
        android:text="Seller"
        android:textColor="#4d4d4d"
        android:textStyle="normal|italic"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/listingPrice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listingImage"
        android:layout_toLeftOf="@+id/listingImage"
        android:text="Price"
        android:textColor="#4d4d4d"
        android:textStyle="normal|italic"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp" />

    <ImageView
        android:id="@+id/listingImage"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>