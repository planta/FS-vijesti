<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/myActionTabBar</item>
        <item name="actionBarTabBarStyle">@style/myActionTabBar</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@color/mainBlue</item>
    </style>
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/mainBlue</item>
        <item name="background">@color/mainBlue</item>
    </style>
    <style name="myActionTabBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/action_tab_indicator</item>
        <item name="background">@drawable/action_tab_indicator</item>
    </style>
</resources>
